{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}

    <main class="wrapper wrapper_post">
        {% include 'shared/aside.html.twig' %}
        <div class="content">
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.body|length > 150 ? post.body|slice(0,150) ~ '...': post.body }}</td>
                        <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
                        <td>
                            <a class="show_btn" href="{{ path('post_show', {'id': post.id}) }}">show</a>
                            <a class="edit_btn" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </table>
            <a class="createButton" href="{{ path('post_new') }}">Create new</a>
        </div>
    </main>



{% endblock %}