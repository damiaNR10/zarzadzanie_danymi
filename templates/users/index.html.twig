{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <main class="wrapper wrapper_post">

        {% include 'shared/aside.html.twig' %}

        <div class="content">
            <table>
                <tr>
                    <th>UserID</th>
                    <th>UserName</th>
                    <th>Password</th>

                </tr>
                {#{{ dump(users) }}#}
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>

    </main>
{% endblock %}
